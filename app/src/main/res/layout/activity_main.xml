<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardDropIn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cardStandalone"
        app:cardBackgroundColor="#FAFAFA"
        >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/dropInUIImageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/mapbox_screenshot_drop_in_ui"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dropInUITitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:text="@string/drop_in_ui_title"
                android:includeFontPadding="false"
                android:textColor="@android:color/black"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dropInUIDescription"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="35"
                android:textSize="14sp"
                android:padding="8dp"
                android:text="@string/drop_in_ui_description"
                android:includeFontPadding="false"
                android:textColor="#131313"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardStandalone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardDropIn"
        app:cardBackgroundColor="#FAFAFA"
        >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/standaloneImageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/mapbox_ic_user_current_location"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/standaloneTitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:text="@string/standalone_components_title"
                android:includeFontPadding="false"
                android:textColor="@android:color/black"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/standaloneDescription"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="35"
                android:textSize="15sp"
                android:padding="8dp"
                android:text="@string/standalone_components_description"
                android:includeFontPadding="false"
                android:textColor="#131313"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>